        @if (TempData["Success"] != null) {
                    <text>
                        Toastify({
                            text: "@TempData["Success"]",
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
                            stopOnFocus: true
                        }).showToast();
                    </text>
        }
        @if (TempData["Error"] != null) {
                    <text>
                        Toastify({
                            text: "@TempData["Error"]",
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "linear-gradient(to right, #ff6b6b, #ee5a24)",
