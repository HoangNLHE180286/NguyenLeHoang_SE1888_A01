                        @if (Context.Session.GetString("UserEmail") == null) {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        } else {
                            @if (Context.Session.GetInt32("UserRole") == 0) {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="AccountManagement">Account Management</a>
                                </li>
                            }

                            @if (Context.Session.GetInt32("UserRole") == 1) {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="News" asp-action="NewsManagement">Manage News</a>
                                </li>
